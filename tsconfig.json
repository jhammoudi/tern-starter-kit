{
  "compilerOptions": {
    "module": "commonjs",
    "baseUrl": ".",
    "outDir": "build",
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es6"
    ],
    "allowJs": true,
    "alwaysStrict": true
  },
  "include": [
    "./backend/**/*"
  ],
  "exclude": [
    "./frontend",
    "./node_modules"
  ]
}